# ==============================================
# PRODUCTION CONFIGURATION (EC2)
# Copy this file to .env.production and fill in your values
# This file is used by deploy-ec2.sh
# ==============================================

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Database (using Supabase session pooler)
DATABASE_URL=postgresql+asyncpg://postgres.your-project:your-password@aws-1-eu-central-1.pooler.supabase.com:5432/postgres

# CORS - Allow your production frontend domains
CORS_ORIGINS=["https://alertsdydx.com","https://api.alertsdydx.com"]

# Application
SECRET_KEY=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING_IN_PRODUCTION
ENVIRONMENT=production
DEBUG=false

# dYdX v4 MAINNET - Production uses mainnet
DYDX_INDEXER_REST_URL=https://indexer.dydx.trade/v4
DYDX_INDEXER_WS_URL=wss://indexer.dydx.trade/v4/ws
DYDX_NETWORK=mainnet
ENABLE_MONITOR=true

# Notification Services
TELEGRAM_BOT_TOKEN=
DISCORD_BOT_TOKEN=
PAGERDUTY_API_KEY=

# Email
SMTP_HOST=smtp.mailersend.net
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Server - Production port
HOST=0.0.0.0
PORT=8000
