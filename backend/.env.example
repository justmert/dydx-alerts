# ==============================================
# LOCAL DEVELOPMENT CONFIGURATION
# Copy this file to .env and fill in your values
# ==============================================

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Database (using Supabase session pooler for IPv4 compatibility)
DATABASE_URL=postgresql+asyncpg://postgres.your-project:your-password@aws-1-eu-central-1.pooler.supabase.com:5432/postgres

# CORS - Add your local frontend URLs
CORS_ORIGINS=["http://localhost:3000","http://localhost:8022"]

# Application
SECRET_KEY=your-secret-key-change-this-in-production
ENVIRONMENT=development
DEBUG=true

# dYdX v4 - Use testnet for development
DYDX_INDEXER_REST_URL=https://indexer.v4testnet.dydx.exchange/v4
DYDX_INDEXER_WS_URL=wss://indexer.v4testnet.dydx.exchange/v4/ws
DYDX_NETWORK=testnet
ENABLE_MONITOR=true

# Notification Services (Optional)
TELEGRAM_BOT_TOKEN=
DISCORD_BOT_TOKEN=
PAGERDUTY_API_KEY=

# Email (Optional)
SMTP_HOST=smtp.mailersend.net
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Server - Local development port
HOST=0.0.0.0
PORT=8021
